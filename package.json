{
  "port": 11012,
  "name": "MemeOfLinonetwo",
  "version": "1.0.0",
  "repository": "git@github.com:linonetwo/Meme-of-LinOnetwo.git",
  "author": "linonetwo <linonetwo012@gmail.com>",
  "license": "MIT",
  "scripts": {
    "install:nodeJSWatcher": "sh scripts/installNodeJSWatcher.sh",
    "install:privateRepo": "cd ./MemeOfLinonetwo/tiddlers && ln -sfn ../../../private-Meme-of-LinOnetwo ./private-Meme-of-LinOnetwo",
    "uninstall": "sh scripts/uninstall.sh",
    "start:nodejs": "cross-env TIDDLYWIKI_PLUGIN_PATH='MemeOfLinonetwo/plugins' tiddlywiki +plugins/tiddlywiki/filesystem MemeOfLinonetwo --listen port=11012 \"root-tiddler=$:/core/save/lazy-images\"",
    "build": "npm run build:mkdir && npm run build:nodejs2html && npm run build:sitemap && npm run build:minify && npm run build:public && npm run build:clean",
    "build:nodejs2html": "cross-env TIDDLYWIKI_PLUGIN_PATH='MemeOfLinonetwo/plugins' tiddlywiki MemeOfLinonetwo --build externalimages",
    "build:sitemap": "cross-env TIDDLYWIKI_PLUGIN_PATH='MemeOfLinonetwo/plugins' tiddlywiki MemeOfLinonetwo --rendertiddler sitemap sitemap.xml text/plain && mv ./MemeOfLinonetwo/output/sitemap.xml ./public/sitemap.xml",
    "build:public": "cp ./MemeOfLinonetwo/public/status.json ./public/status.json && cp ./MemeOfLinonetwo/tiddlers/favicon.ico ./public/favicon.ico && cp ./MemeOfLinonetwo/public/tiddlers.json ./public/tiddlers.json",
    "build:mkdir": "mkdir -p ./public",
    "build:minify": "npm run build:minifyJS && npm run build:minifyHTML",
    "build:minifyJS": "terser --config-file ./terser.config.json --output public/tiddlywiki5.js -- ./MemeOfLinonetwo/output/tiddlywiki5.js",
    "build:minifyHTML": "html-minifier-terser -c ./html-minifier-terser.config.json -o ./public/index.html ./MemeOfLinonetwo/output/index.html",
    "build:clean": "rm -r ./MemeOfLinonetwo/output"
  },
  "dependencies": {
    "tiddlywiki": "^5.1.21"
  },
  "devDependencies": {
    "cross-env": "7.0.2",
    "html-minifier-terser": "5.0.5",
    "terser": "4.6.11"
  }
}
