title: $:/plugins/OokTech/Bob/DeleteWikis
caption: Delete Wikis

\define updateNameActions()
<$action-websocketmessage
  $type='deleteWiki'
  deleteWiki={{$:/state/DeleteWiki!!delete_wiki}}
  deleteChildren={{$:/state/DeleteWiki!!delete_children}}
/>
<$action-setfield
  $tiddler='$:/state/DeleteWiki'
  delete_wiki=''
  delete_children=''
/>
\end

<$reveal
  type='nomatch'
  state='$:/settings/Bob/Verbose'
  text='false'
>

</$reveal>

Select Wiki:
<$select
  tiddler='$:/state/DeleteWiki'
  field='delete_wiki'
>
  <option
    value=''
  >
    Select Wiki
  </option>
  <$list
    filter='[list[$:/state/ViewableWikis]]'
  >
    <option>
      <<currentTiddler>>
    </option>
  </$list>
</$select> <<helpButton $:/plugins/OokTech/Bob/AboutDeleteWikiSelect>>

<$checkbox
  tiddler='$:/state/DeleteWiki'
  field='delete_children'
  checked='yes'
  unchecked='no'
>
  Delete Children
</$checkbox> <<helpButton $:/plugins/OokTech/Bob/AboutDeleteWikiSelect>>

<$button
  actions=<<updateNameActions>>
>
  Delete Wiki
</$button>
